schema {
    query: Query
    mutation: Mutation
}

type FeatureFlag {
    key: String!
    enabled: Boolean!
}

enum SubscriptionPlan {
    FREE_TRIAL
    BASIC
    PRO
    ENTERPRISE
}

type UserFeatures {
    id: ID!
    subscriptionPlan: SubscriptionPlan!
    featureFlags: [FeatureFlag!]!
}

type Query {
    user(id: ID!): UserFeatures
}

type Mutation {
    updateUserPlan(id: ID!, subscriptionPlan: SubscriptionPlan!): UserFeatures
}
